<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Mappify</PackageId>
    <Version>1.2.0</Version>
    <Authors>Kirill Volirvag</Authors>
    <Product>Mappify</Product>
    <Description>A library for intuitive and flexible object mapping, empowering developers to simplify complex data transformations.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Volirvag49/Mappify</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>Mapper, Auto mapper, Object mapper, factory</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="" Visible="False" />
    <None Include="..\icon.png" Pack="true" PackagePath="" Visible="False" />
  </ItemGroup>

</Project>